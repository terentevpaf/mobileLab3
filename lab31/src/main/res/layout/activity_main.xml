<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30px"
            android:text="Работа с базой данных"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bListUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Открыть список студентов" />

        <Button
            android:id="@+id/bAddUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Внести новую запись в базу даных" />

        <Button
            android:id="@+id/bEditLastUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заменить последюю запись в базе данных" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>